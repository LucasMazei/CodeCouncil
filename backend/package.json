{
  "name": "code-council",
  "version": "0.0.1",
  "main": "dist/infra/server/index.ts",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch './**' --ext 'ts,json' --ignore './**/*.spec.ts' --exec 'ts-node --require ./infra/telemetry/instrumentation.ts infra/server/index.ts'",
    "migrate": "npx prisma migrate dev --name init --schema infra/database/prisma/schema.prisma",
    "seed": "ts-node infra/database/scripts/seed.ts",
    "seed:prod": "node dist/infra/database/scripts/seed.js",
    "build": "tsc  --outDir dist",
    "start": "node dist/infra/server/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.55.1",
    "@opentelemetry/exporter-jaeger": "^1.30.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.57.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.57.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/sdk-metrics": "^1.30.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/sdk-trace-node": "^1.30.0",
    "@tsconfig/node20": "^20.1.4",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "inversify": "^6.2.1",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "nodemon": "^3.1.9",
    "pg-mem": "^3.0.4",
    "prisma": "6.1.0",
    "prisma-kysely": "^1.8.0",
    "ts-node": "^10.9.2"
  }
}